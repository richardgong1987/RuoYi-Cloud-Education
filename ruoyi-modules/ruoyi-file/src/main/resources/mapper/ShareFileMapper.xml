<mapper namespace="com.ruoyi.file.mapper.ShareFileMapper">


    <insert id="batchInsertShareFile" parameterType="java.util.List">
        INSERT ignore INTO file_sharefile (shareBatchNum, userFileId, shareFilePath)
        VALUES
        <foreach collection="list" item="file" index="index" separator=",">
            (#{file.shareBatchNum}, #{file.userFileId}, #{file.shareFilePath})
        </foreach>
    </insert>

    <select id="selectShareFileList" resultType="com.ruoyi.file.vo.share.ShareFileListVO">
        select *
        FROM file_sharefile a
                 LEFT JOIN file_share ON file_share.shareBatchNum = a.shareBatchNum
                 left JOIN file_userfile b on b.userFileId = a.userFileId
                 left JOIN file_file c on c.fileId = b.fileId
        where a.shareBatchNum = #{shareBatchNum}
          and a.shareFilePath = #{shareFilePath}
    </select>


